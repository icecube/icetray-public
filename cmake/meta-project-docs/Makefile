#
# this was generated by sphinx itself and is just here for reference, use the cmake targets
#
#
# Makefile for Sphinx documentation
#

# You can set these variables from the command line.
SPHINXOPTS    = -N -a -E
SPHINXBUILD   = sphinx-build 
PAPER         =

# Internal variables.
PAPEROPT_a4     = -D latex_paper_size=a4
PAPEROPT_letter = -D latex_paper_size=letter
ALLSPHINXOPTS   = -d $(I3_BUILD)/docs/build/doctrees $(PAPEROPT_$(PAPER)) $(SPHINXOPTS) source

.PHONY: help clean html web pickle htmlhelp latex changes linkcheck

help:
	@echo "Please use \`make <target>' where <target> is one of"
	@echo "  html      to make standalone HTML files"
	@echo "  pickle    to make pickle files (usable by e.g. sphinx-web)"
	@echo "  htmlhelp  to make HTML files and a HTML help project"
	@echo "  latex     to make LaTeX files, you can set PAPER=a4 or PAPER=letter"
	@echo "  changes   to make an overview over all changed/added/deprecated items"
	@echo "  linkcheck to check all external links for integrity"

clean:
	-rm -rf $(I3_BUILD)/docs/build/*

html:
	mkdir -p $(I3_BUILD)/docs/html $(I3_BUILD)/docs/build/doctrees
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(I3_BUILD)/docs/html
	@echo
	@echo "Build finished. The HTML pages are in $(I3_BUILD)/docs/build/html."

pickle:
	mkdir -p $(I3_BUILD)/docs/build/pickle $(I3_BUILD)/docs/build/doctrees
	$(SPHINXBUILD) -b pickle $(ALLSPHINXOPTS) $(I3_BUILD)/docs/build/pickle
	@echo
	@echo "Build finished; now you can process the pickle files or run"
	@echo "  sphinx-web $(I3_BUILD)/docs/build/pickle"
	@echo "to start the sphinx-web server."

web: pickle

htmlhelp:
	mkdir -p $(I3_BUILD)/docs/build/htmlhelp $(I3_BUILD)/docs/build/doctrees
	$(SPHINXBUILD) -b htmlhelp $(ALLSPHINXOPTS) $(I3_BUILD)/docs/build/htmlhelp
	@echo
	@echo "Build finished; now you can run HTML Help Workshop with the" \
	      ".hhp project file in $(I3_BUILD)/docs/build/htmlhelp."

latex:
	mkdir -p $(I3_BUILD)/docs/latex $(I3_BUILD)/docs/build/doctrees
	$(SPHINXBUILD) -b latex $(ALLSPHINXOPTS) $(I3_BUILD)/docs/latex
	@echo
	@echo "Build finished; the LaTeX files are in $(I3_BUILD)/docs/build/latex."
	@echo "Run \`make all-pdf' or \`make all-ps' in that directory to" \
	      "run these through (pdf)latex."

changes:
	mkdir -p $(I3_BUILD)/docs/changes $(I3_BUILD)/docs/build/doctrees
	$(SPHINXBUILD) -b changes $(ALLSPHINXOPTS) $(I3_BUILD)/docs/changes
	@echo
	@echo "The overview file is in $(I3_BUILD)/docs/build/changes."

linkcheck:
	mkdir -p $(I3_BUILD)/docs/linkcheck $(I3_BUILD)/docs/build/doctrees
	$(SPHINXBUILD) -b linkcheck $(ALLSPHINXOPTS) $(I3_BUILD)/docs/linkcheck
	@echo
	@echo "Link check complete; look for any errors in the above output " \
	      "or in $(I3_BUILD)/docs/build/linkcheck/output.txt."
